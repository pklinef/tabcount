{
  "manifest_version": 2,
  "name": "TabCount",
  "version": "1.0",
  "description": "Tab counter",
  "icons": {
    "128": "icon_128.png"
  },
  "permissions": [
    "tabs",
    "downloads"
  ],
  "background": {
    "scripts": [
      "tabcount.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Tab counts",
    "default_icon": "icon_128.png",
    "default_popup": "popup.html"
  },
  "applications": {
    "gecko": {
      "id": "tabcount@pklinef.github.io"
    }
  }
}